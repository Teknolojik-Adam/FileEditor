<Window x:Class="dosya_duzenleme.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Metin Düzenleyici" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Stiller -->
        <Style x:Key="FlatButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="IconButton" TargetType="Button" BasedOn="{StaticResource FlatButton}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Width" Value="30"/>
        </Style>

        <Style x:Key="FormatButton" TargetType="ToggleButton">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MinimalComboBox" TargetType="ComboBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Padding" Value="2"/>
        </Style>

        <Style x:Key="VerticalSeparator" TargetType="Separator">
            <Setter Property="Margin" Value="8,0"/>
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Width" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <ToolBar Grid.Row="0" 
                 Background="White" 
                 Height="40" 
                 Padding="5">

            <!-- File Operations -->
            <Button x:Name="new" Content="📄 Yeni" Style="{StaticResource FlatButton}" Height="24" Click="new_Click"/>
            <Button x:Name="ac" Content="📂 Aç" Style="{StaticResource FlatButton}" Height="25" Click="ac_Click"/>
            <Button x:Name="kaydet" Content="💾 Kaydet" Style="{StaticResource FlatButton}" Height="26" Click="kaydet_Click"/>
            <Separator Style="{StaticResource VerticalSeparator}"/>

            <!-- Edit Operations -->
            <Button x:Name="geriAl" Content="↩" ToolTip="Geri Al" Style="{StaticResource IconButton}" Height="24" Click="geriAl_Click"/>
            <Button x:Name="yinele" Content="↪" ToolTip="Yinele" Style="{StaticResource IconButton}" Height="25" Click="yinele_Click"/>
            <Separator Style="{StaticResource VerticalSeparator}"/>

            <!-- Font Controls -->
            <ComboBox Name="fontComboBox" 
                      Width="120" 
                      Style="{StaticResource MinimalComboBox}" SelectionChanged="fontComboBox_SelectionChanged">
                <ComboBoxItem Content="Arial"/>
                <ComboBoxItem Content="Times New Roman"/>
                <ComboBoxItem Content="Verdana"/>
            </ComboBox>

            <ComboBox Name="fontSizeComboBox" 
                      Width="60" 
                      Style="{StaticResource MinimalComboBox}" VerticalAlignment="Top" SelectionChanged="fontSizeComboBox_SelectionChanged">
                <ComboBoxItem Content="8"/>
                <ComboBoxItem Content="12"/>
                <ComboBoxItem Content="16"/>
                <ComboBoxItem Content="24"/>
            </ComboBox>

            <!-- Text Formatting -->
            <ToggleButton x:Name="boldButton" Content="B" 
                        Style="{StaticResource FormatButton}" Checked="boldButton_Checked"
                          Unchecked="BoldButton_Unchecked"/>
            <ToggleButton x:Name="italicButton" Content="I" 
                        Style="{StaticResource FormatButton}" Checked="italicButton_Checked"/>
            <ToggleButton x:Name="underlineButton" Content="U" 
                        Style="{StaticResource FormatButton}" Height="28" Checked="underlineButton_Checked" Unchecked="UnderlineButton_Unchecked"/>

            <!-- Search/Replace -->
            <Separator Style="{StaticResource VerticalSeparator}"/>
            <Button Content="🔍 Bul" Style="{StaticResource FlatButton}" Height="26" Click="Button_Click"/>
            <Button Content="🔄 Değiştir" Style="{StaticResource FlatButton}" Height="26" Click="Button_Click_1"/>
        </ToolBar>

        <!-- Editor Area -->
        <RichTextBox x:Name="yazi1" 
                     Grid.Row="1" 
                     Margin="10"
                     BorderThickness="1"
                     BorderBrush="#E0E0E0"
                     Background="White"
                     VerticalScrollBarVisibility="Auto">
            <FlowDocument>
                <Paragraph>
                    <Run Text="Metninizi buraya yazın..."/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
    </Grid>
</Window>