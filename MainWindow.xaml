<Window x:Class="dosya_duzenleme.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:dosya_duzenleme"
        Title="Text Editor" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        Closing="Window_Closing">

    <Window.Resources>
        <Style x:Key="FlatButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="IconButton" TargetType="Button" BasedOn="{StaticResource FlatButton}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Width" Value="30"/>
        </Style>

        <Style x:Key="FormatButton" TargetType="ToggleButton">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MinimalComboBox" TargetType="ComboBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Padding" Value="2"/>
        </Style>

        <Style x:Key="VerticalSeparator" TargetType="Separator">
            <Setter Property="Margin" Value="8,0"/>
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Width" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ToolBar Grid.Row="0" Background="White" Height="40" Padding="5">
            <!-- File -->
            <Button x:Name="btnNew" Content="New" Style="{StaticResource FlatButton}" Height="24" Click="New_Click"/>
            <Button x:Name="btnOpen" Content="Open" Style="{StaticResource FlatButton}" Height="25" Click="Open_Click"/>
            <Button x:Name="btnSave" Content="Save" Style="{StaticResource FlatButton}" Height="26" Click="Save_Click"/>
            <Separator Style="{StaticResource VerticalSeparator}"/>

            <!-- Edit -->
            <Button x:Name="btnUndo" Content="↩" ToolTip="Undo" Style="{StaticResource IconButton}" Height="24" Click="Undo_Click"/>
            <Button x:Name="btnRedo" Content="↪" ToolTip="Redo" Style="{StaticResource IconButton}" Height="25" Click="Redo_Click"/>
            <Separator Style="{StaticResource VerticalSeparator}"/>

            <!-- Font -->
            <ComboBox x:Name="fontComboBox" Width="120" Style="{StaticResource MinimalComboBox}" SelectionChanged="FontComboBox_SelectionChanged">
                <ComboBoxItem Content="Arial"/>
                <ComboBoxItem Content="Times New Roman"/>
                <ComboBoxItem Content="Verdana"/>
            </ComboBox>

            <ComboBox x:Name="fontSizeComboBox" Width="60" Style="{StaticResource MinimalComboBox}" VerticalAlignment="Top" SelectionChanged="FontSizeComboBox_SelectionChanged">
                <ComboBoxItem Content="8"/>
                <ComboBoxItem Content="12"/>
                <ComboBoxItem Content="16"/>
                <ComboBoxItem Content="24"/>
            </ComboBox>

            <!-- Format -->
            <ToggleButton x:Name="boldButton" Content="B" Style="{StaticResource FormatButton}" Checked="BoldButton_Checked" Unchecked="BoldButton_Unchecked"/>
            <ToggleButton x:Name="italicButton" Content="I" Style="{StaticResource FormatButton}" Checked="ItalicButton_Checked" Unchecked="ItalicButton_Unchecked"/>
            <ToggleButton x:Name="underlineButton" Content="U" Style="{StaticResource FormatButton}" Height="28" Checked="UnderlineButton_Checked" Unchecked="UnderlineButton_Unchecked"/>

            <Separator Style="{StaticResource VerticalSeparator}"/>
            <Button x:Name="btnFind" Content="Find" Style="{StaticResource FlatButton}" Height="26" Click="Find_Click"/>
            <Button x:Name="btnReplace" Content="Replace" Style="{StaticResource FlatButton}" Height="26" Click="Replace_Click"/>

            <Separator Style="{StaticResource VerticalSeparator}"/>
            <!-- Language switch -->
            <Button x:Name="btnTurkish" Content="TR" Style="{StaticResource FlatButton}" Height="26" Click="SwitchToTurkish_Click" ToolTip="Turkish"/>
            <Button x:Name="btnEnglish" Content="EN" Style="{StaticResource FlatButton}" Height="26" Click="SwitchToEnglish_Click" ToolTip="English"/>
        </ToolBar>

        <TabControl x:Name="tabControl" Grid.Row="1" Margin="10,0,10,0" SelectionChanged="TabControl_SelectionChanged">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Header}" />
                        <Button Content="x" Margin="5,0,0,0" Padding="3,0" FontSize="10" FontWeight="Bold" VerticalAlignment="Center" Click="CloseTab_Click" CommandParameter="{Binding}" Background="Transparent" BorderThickness="0"/>
                    </StackPanel>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <RichTextBox VerticalScrollBarVisibility="Auto" TextChanged="Editor_TextChanged"
                                 local:RichTextBoxBinder.Document="{Binding Content, Mode=TwoWay}"
                                 Loaded="Editor_Loaded" />
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>

        <StatusBar Grid.Row="2" Background="#F5F5F5" Height="22">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem Grid.Column="1">
                <TextBlock x:Name="wordCountLabel" Margin="0,0,5,0" />
            </StatusBarItem>
            <StatusBarItem Grid.Column="2">
                <TextBlock x:Name="charCountLabel" Margin="0,0,10,0" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
